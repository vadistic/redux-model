{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "scripts",
    "dist",
    "build",
    "**/test",
    "**/spec",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
